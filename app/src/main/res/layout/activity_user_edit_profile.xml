<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/GreyBackground"
    tools:context="com.gymrein.UserEditProfileActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/btn_profile_picture_updProf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_add_image"
        app:civ_border="true"
        app:civ_border_color="@color/GreyBackground"
        app:civ_shadow="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_person"
        android:id="@+id/iconName_updProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tf_lastName_updProf"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tf_name_updProf"
        android:hint="Nombre"
        android:layout_marginStart="60dp"
        android:backgroundTint="@color/BlueIcon"
        android:layout_below="@+id/btn_profile_picture_updProf"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_person"
        android:id="@+id/iconLast_updProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tf_email_updProf"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tf_lastName_updProf"
        android:hint="Apellido"
        android:layout_below="@+id/tf_name_updProf"
        android:layout_alignStart="@+id/tf_name_updProf"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/BlueIcon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mail"
        android:id="@+id/iconMail_updProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tf_phone_updProf"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tf_email_updProf"
        android:hint="Email"
        android:backgroundTint="@color/BlueIcon"
        android:layout_below="@+id/tf_lastName_updProf"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_phone"
        android:id="@+id/iconPhone_updProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tf_date_of_birth_updProf"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/tf_phone_updProf"
        android:hint="Teléfono"
        android:layout_below="@+id/tf_email_updProf"
        android:layout_alignStart="@+id/tf_email_updProf"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/BlueIcon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_calendar"
        android:id="@+id/iconCalendar_updProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/sp_gender_updProf"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/tf_date_of_birth_updProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fecha de Nacimiento"
        android:inputType="date"
        android:focusable="false"
        android:layout_below="@+id/tf_phone_updProf"
        android:layout_alignStart="@+id/tf_phone_updProf"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/BlueIcon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_people"
        android:id="@+id/iconPeople_updProf"
        android:tint="@color/BlueIcon"
        android:layout_below="@+id/iconCalendar_updProf"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/sp_gender_updProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="41dp"
        android:layout_below="@+id/tf_date_of_birth_updProf"
        android:layout_alignEnd="@+id/tf_date_of_birth_updProf"
        android:layout_alignStart="@+id/tf_date_of_birth_updProf" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lock"
        android:id="@+id/iconPassword_updProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/iconConfirm_updProf"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_password_updProf"
        android:hint="Contraseña"
        android:backgroundTint="@color/BlueIcon"
        android:layout_below="@+id/tv_note_about_psswd"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_note_about_psswd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lock"
        android:id="@+id/iconConfirm_updProf"
        android:tint="@color/BlueIcon"
        android:layout_below="@+id/tf_password_updProf"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_confirmPassword_updProf"
        android:hint="Confirmar Contraseña"
        android:layout_below="@+id/tf_password_updProf"
        android:layout_alignStart="@+id/tf_password_updProf"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/BlueIcon"/>

    <Button
        android:text="Actualizar Información"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_update_profile__updProf"
        android:background="@drawable/rouded_corners"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <ImageButton
        android:id="@+id/btn_back_to_user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:tint="@color/OrangeAccent"
        app:srcCompat="@mipmap/ic_close" />

    <TextView
        android:id="@+id/tv_note_about_psswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/OrangeAccent"
        android:text="Dejar en blanco si no se desea cambiar la contraseña."
        android:layout_below="@+id/iconPeople_updProf"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/sp_gender_updProf" />


</RelativeLayout>
