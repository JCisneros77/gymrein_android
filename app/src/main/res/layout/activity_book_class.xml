<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreyBackground"
    tools:context="com.gymrein.PaymentActivity">

    <ImageButton
        android:id="@+id/btn_back_to_main_bc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_back_button"
        android:tint="@color/OrangeAccent" />
    <!--app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"-->

    <TextView
        android:id="@+id/tv_title_bc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservar"
        android:textSize="30sp"
        android:textColor="@color/BlueIcon"
        android:layout_alignTop="@+id/btn_back_to_main_bc"
        android:layout_centerHorizontal="true" />

    <CalendarView
        android:id="@+id/cv_calendar_bc"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_back_to_main_bc"
        android:layout_marginTop="22dp" />

    <ListView
        android:id="@+id/lv_classes_day_bc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cv_calendar_bc" />


</RelativeLayout>
