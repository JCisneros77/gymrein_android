<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/GreyBackground"
    tools:context="com.gymrein.UserProfileActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/btn_profile_picture_userProf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_add_image"
        app:civ_border="true"
        app:civ_border_color="@color/GreyBackground"
        app:civ_shadow="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_person"
        android:id="@+id/iconName_userProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tv_lastName_userProf"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_userProf"
        android:text="Nombre"
        android:textSize="21sp"
        android:layout_marginStart="60dp"
        android:backgroundTint="@color/BlueIcon"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/btn_profile_picture_userProf"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_person"
        android:id="@+id/iconLast_userProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tv_email_userProf"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:id="@+id/tv_lastName_userProf"
        android:text="Apellido"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/BlueIcon"
        android:layout_below="@+id/tv_name_userProf"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tv_name_userProf" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mail"
        android:id="@+id/iconMail_userProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tv_phone_userProf"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:id="@+id/tv_email_userProf"
        android:text="Email"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_lastName_userProf"
        android:layout_alignStart="@+id/tv_lastName_userProf"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/BlueIcon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_phone"
        android:id="@+id/iconPhone_userProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tv_date_of_birth_userProf"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phone_userProf"
        android:text="Teléfono"
        android:textSize="21sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_email_userProf"
        android:layout_alignStart="@+id/tv_email_userProf"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/BlueIcon"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_calendar"
        android:id="@+id/iconCalendar_userProf"
        android:tint="@color/BlueIcon"
        android:layout_above="@+id/tv_gender_userProf"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/tv_date_of_birth_userProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento"
        android:textSize="21sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_phone_userProf"
        android:layout_alignStart="@+id/tv_phone_userProf"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/BlueIcon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_people"
        android:id="@+id/iconPeople_userProf"
        android:tint="@color/BlueIcon"
        android:layout_alignBottom="@+id/tv_gender_userProf"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_gender_userProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:text="Gender"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_date_of_birth_userProf"
        android:layout_alignEnd="@+id/tv_date_of_birth_userProf"
        android:layout_alignStart="@+id/tv_date_of_birth_userProf" />


    <Button
        android:text="Editar Información"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_edit_profile_userProf"
        android:background="@drawable/rouded_corners"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <ImageButton
        android:id="@+id/btn_back_to_starting_page_userProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:tint="@color/OrangeAccent"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/ic_back_button" />

    <ImageView
        android:id="@+id/iv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_phone"
        android:tint="@color/OrangeAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
